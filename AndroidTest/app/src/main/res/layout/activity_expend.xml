<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expend"
    android:background="@drawable/wb2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增支出"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/expend_income"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_money"
        android:layout_below="@id/expend_income"
        android:text="金额"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#4169E1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expend_money"
        android:layout_below="@+id/expend_income"
        android:layout_marginTop="40dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/money2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_time"
        android:layout_below="@+id/expend_money"
        android:text="时间"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#4169E1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expend_time"
        android:layout_below="@+id/expend_money"
        android:layout_marginTop="40dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/time2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_kind"
        android:layout_below="@+id/expend_time"
        android:text="类别"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#4169E1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expend_kind"
        android:layout_below="@+id/expend_time"
        android:layout_marginTop="40dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/kind2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_Address"
        android:layout_below="@+id/expend_kind"
        android:text="地点"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#4169E1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expend_time"
        android:layout_below="@+id/expend_kind"
        android:layout_marginTop="40dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/site"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_remark"
        android:layout_below="@+id/expend_Address"
        android:text="备注"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#4169E1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expend_remark"
        android:layout_below="@+id/expend_Address"
        android:layout_marginTop="40dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/remark2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_btn"
        android:layout_below="@+id/expend_remark"
        android:text="保存"
        android:textSize="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:background="#FF0000"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expend_btn_close"
        android:layout_below="@+id/expend_remark"
        android:text="取消"
        android:textSize="40dp"
        android:layout_toRightOf="@+id/expend_btn"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:background="#FF0000"
        android:layout_marginLeft="25dp"/>
</RelativeLayout>